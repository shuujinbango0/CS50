#include <stdio.h>
#include <cs50.h>

int main(void)
{
    int n;
    int i;
    int j;
    //prompt user for positive integer
    do
    {
        n = get_int("Sizes: ");
    }
    while (n < 1);
    //prints the first # block using 2 for loops
    for (i = 0; i < n; i++)
    {
        for (j = 0; j < n; j++)
        {
            printf("#");
        }
        printf("\n");
    }
    //prints the space between the two # blocks using 2 for loops
    for (i = 0; i < n; i++)
    {
        for (j = 0; j < 2; j++)
        {
            printf(" ");
        }
       printf("\n");
    }
    //prints the second # block using 2 for loops
    for (i = 0; i < n; i++)
    {
        for (j = 0; j < n; j++)
        {
            printf("#");
        }
        printf("\n");
    }
}
